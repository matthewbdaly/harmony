{
    "name": "matthewbdaly/harmony",
    "description": "Build Laravel API endpoints quickly and easily",
    "keywords": ["api","laravel","rest","restful"],
    "type": "library",
    "require-dev": {
        "matthewbdaly/artisan-standalone": "0.0.*",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^3.5",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^6.4",
        "psy/psysh": "^0.8.14",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Daly",
            "email": "matthewbdaly@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Matthewbdaly\\Harmony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "league/fractal": "^0.17.0",
        "matthewbdaly/laravel-repositories": "^1.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Matthewbdaly\\Harmony\\Providers\\HarmonyServiceProvider"
            ]
        }
    }
}
